extends layout

block content
    link(rel='stylesheet', href='/stylesheets/inside.css')
    link(rel='stylesheet', href='/stylesheets/colorpicker.css')

    .header
        img(src="images/shotgun_logo.png")
        h1 SHOTGUN
        .build
            input(type="submit" id="buildBTN" value="BUILD")
        .logout
            a(href="/")
                input(type="submit" value="LOG OUT")

    .content
        .preview
          article#devices
              #device.iphone
                  #devicetop.iphone-speaker
                  #screen.iphone-screen
                    iframe#mobile-preview-content.preview-frame(src='/template')
                  a(href='#')
                    #button
                      #button-square

        .inputs
            .break3em
            .rowButtons.cf
                input#main.focus(type="submit" value="MAIN")
                input#updates(type="submit" value="UPDATES")
                input#mentors(type="submit" value="MENTORS")
                input#prizes(type="submit" value="PRIZES")
                input#schedule(type="submit" value="SCHEDULE")
            .break3em

            .addThree.cf#mainInput(ng-controller="colors")
                input(type="text" name="name" placeholder="Event Name")
                input#colorPrimary(type="text" name="name" placeholder="Primary Color" colorpicker ng-model="color1")
                .theme
                    input.selected#light(type="Submit" name="Light" value="LIGHT" onclick="toggleTheme('light')")
                    input#dark(type="Submit" name="Dark" value="DARK" onclick="toggleTheme('dark')")
                input#background(style="display:none;" ng-model="bgimage" value="")
                .backgrounds
                    .thumb
                        .congruent_outline
                    .thumb
                        .congruent_pentagon
                    .thumb
                        .grey_wash_wall
                    .thumb
                        .noisy
                    .thumb
                        .small_steps
                    .thumb
                        .sprinkles
                    .thumb
                        .tree_bark
                    .thumb
                        .triangular
                    .thumb
                        .white
                input(type='filepicker', data-fp-apikey='AAhXvilT1RIaTrxakvtWnz', data-fp-mimetypes='*/*', data-fp-container='modal', data-fp-services='COMPUTER,DROPBOX,GOOGLE_DRIVE,URL', onchange='filePicked(event)' data-fp-button-text="UPLOAD LOGO")
                .save
                    h2 SAVE

