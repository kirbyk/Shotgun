            .addThree.updates#updatesInput(style='display:none;')

                input#updateNameInput.inputField(type='text', placeholder='Update Name')
                input#updateDescInput.inputField(type='text', placeholder='Update Description')
                .save#addUpdate
                    h2 SAVE

            .addThree.mentors#mentorsInput(style='display:none;')

                input#mentorCompanyInput.inputField(type='text', placeholder='Mentor Company')
                input#mentorNameInput.inputField(type='text', placeholder='Mentor Name')
                input#mentorDescriptionInput.inputField(type='text', placeholder='Mentor Skills')
                .save#addMentor
                    h2 SAVE

            .addThree.prizes#prizesInput(style='display:none;')

                input#prizeCompanyNameInput.inputField(type='text', placeholder='Company Name')
                input#prizeTitleInput.inputField(type='text', placeholder='Prize Title')
                input#prizeDescInput.inputField(type='text', placeholder='Prize Description')
                input#prizeAwardInput.inputField(type='text', placeholder='Prize Award')
                .save#addPrize
                    h2 SAVE

            .addThree.schedule#scheduleInput(style='display:none;')

                input#eventNameInput.inputField(type='text', placeholder='Event Name')
                input#eventDateInput.inputField(type='date', placeholder='Event Date')
                input#eventTimeInput.inputField(type='text', placeholder='Event Time')
                input#eventLocationInput.inputField(type='text', placeholder='Event Location')
                input#eventDescInput.inputField(type='text', placeholder='Event Description')
                .save#addEvent
                    h2 SAVE

