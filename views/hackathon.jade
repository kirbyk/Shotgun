extends layout

block content
    link(rel='stylesheet', href='/stylesheets/inside.css')

    .header
        img(src="images/shotgun_logo.png")
        h1 SHOTGUN
        .build
            input(type="submit" value="BUILD")
        .logout
            input(type="submit" value="LOG OUT")

    .content
        .preview
          article#devices
              #device.iphone
                  #devicetop.iphone-speaker
                  #screen.iphone-screen
                    iframe#mobile-preview-content.preview-frame(src='http://localhost:8100/#/tab/updates')
                  a(href='#')
                    #button
                      #button-square

        .inputs
            .break3em
            .rowButtons.cf
                input#main(type="submit" value="MAIN")
                input#updates(type="submit" value="UPDATES")
                input#mentors(type="submit" value="MENTORS")
                input#prizes(type="submit" value="PRIZES")
                input#schedule(type="submit" value="SCHEDULE")
            .break3em
            .addThree#mainInput
                label.cf(for="name") Event Name
                input(type="text" name="name")
                .block.cf
                    label.colors(for="name") Color 1
                    label.colors(for="name") Color 2
                    label.colors(for="name") Color 3
                .block.cf
                    input.colors(type="text" name="name")
                    input.colors(type="text" name="name")
                    input.colors(type="text" name="name")
                label(for="") Upload a Logo
                input(type='filepicker', data-fp-apikey='AAhXvilT1RIaTrxakvtWnz', data-fp-mimetypes='*/*', data-fp-container='modal', data-fp-services='COMPUTER,DROPBOX,GOOGLE_DRIVE,URL', onchange='filePicked(event)' data-fp-button-text="UPLOAD")

            .addThree.updates#updatesInput(style='display:none;')

                input.inputField(type='text', placeholder='Update Name')
                input.inputField(type='text', placeholder='Update Description')
                input.add(type='Submit' id='addUpdate' value='Add Update')


            .addThree.mentors#mentorsInput(style='display:none;')

                input#mentorCompanyInput.inputField(type='text', placeholder='Mentor Company')
                input#mentorNameInput.inputField(type='text', placeholder='Mentor Name')
                input#mentorDescriptionInput.inputField(type='text', placeholder='Mentor Skills')
                input.add(type='Submit' id='addMentor' value='Add Mentor')
    

            .addThree.prizes#prizesInput(style='display:none;')

                input.inputField(type='text', placeholder='Company Name')
                input.inputField(type='text', placeholder='Prize Name')
                input.inputField(type='text', placeholder='Prize Description')
                input.add(type='Submit' id='addMentor' value='Add Prize')

            .addThree.schedule#scheduleInput(style='display:none;')

                input.inputField(type='text', placeholder='Event Name')
                input.inputField(type='text', placeholder='Event Location')
                input.inputField(type='text', placeholder='Event Description')
                input.add(type='Submit' id='addMentor' value='Add Event')


